<!-- your_custom_module/views/templates.xml -->
<odoo>
    <template id="custom_form_template" name="Custom Form">
        <form action="/shop/handle_custom_form" method="post">
            <div>
                <label for="nome">Nome:</label>
                <input type="text" name="nome" id="nome" required/>
            </div>
            <div>
                <label for="cognome">Cognome:</label>
                <input type="text" name="cognome" id="cognome" required/>
            </div>
            <div>
                <label for="codice_fiscale">Codice Fiscale:</label>
                <input type="text" name="codice_fiscale" id="codice_fiscale" required/>
            </div>
            <div>
                <label for="email">Email:</label>
                <input type="email" name="email" id="email" required/>
            </div>
            <div>
                <label for="numero_telefono">Numero di Telefono:</label>
                <input type="tel" name="numero_telefono" id="numero_telefono" required/>
            </div>
            <div>
                <label for="luogo_pickup">Luogo Pickup:</label>
                <input type="text" name="luogo_pickup" id="luogo_pickup" required/>
            </div>
            <div>
                <label for="lingua">Lingua:</label>
                <input type="text" name="lingua" id="lingua" required/>
            </div>
            <div>
                <label for="data">Data:</label>
                <input type="date" name="data" id="data" required/>
            </div>
            <div>
                <label for="assistenza_disabili">Assistenza Disabili:</label>
                <input type="checkbox" name="assistenza_disabili" id="assistenza_disabili"/>
            </div>
            <div>
                <label for="richieste_extra">Richieste Extra:</label>
                <textarea name="richieste_extra" id="richieste_extra"></textarea>
            </div>
            <button type="submit">Invia</button>
        </form>
    </template>
</odoo>
